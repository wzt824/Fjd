.bot-header
  width 100%
  height 2rem
  background #ff4632
  display flex
  align-items center
  padding .25rem
  .person
    position relative
    margin-right .15rem
    img
      border-radius 50%
      width 1rem
      height 1rem
    span
      display inline-block
      background-color #838383
      width .95rem
      height .25rem
      line-height .25rem
      text-align center
      border-radius .12rem
      font-size .15rem
      color #ffffff
      opacity .6
      position absolute
      bottom -.15rem

  .intro
    .my-name
      display flex
      align-items center
      margin-bottom .15rem
      h3
        width 2rem
        font-size .25rem
        color #ffffff
        overflow hidden
        white-space nowrap
        text-overflow ellipsis
      .vip
        padding .04rem .1rem
        background-color #ec5542
        border-radius .15rem
        font-size .15rem
        color #ffffff
    .doudou
      display flex
      align-items center
      .vipdoudou
        font-size .12rem
        color #ffffff
        border 1px solid #f1dd96
        border-radius .13rem
        padding .05rem .1rem
        margin-right .1rem
