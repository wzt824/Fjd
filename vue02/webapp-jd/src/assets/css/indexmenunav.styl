@charset "utf-8"
$white-bg = #ffffff
$white-txt = #ffffff

$gray-tit = #737373
$right-gray-bg = #f5f5f5
//menunav
.sec-nav
  border-radius 20px
  .sw-menu
    ul
      display flex
      margin-bottom .04rem
      background-color $right-gray-bg
      li
        flex 1
        padding  .15rem 0
        margin-right .04rem
        background-color $white-bg
        a
          display flex
          flex-direction column
          align-items center
          img
            display flex
            width .55rem
            height .55rem
          span
            color $gray-tit
            font-size .17rem

      &:last-child
        margin-right 0
    .swiper-pagination-bullets
      bottom -30px
    .swiper-pagination-bullet-active
      color $white-txt
      background  #676771!important
      width .13rem
      margin 0!important
    .swiper-pagination-bullet
      margin 0 5px
      margin-bottom .07rem!important
      border-radius .01rem
      text-align center
      line-height .04rem
      font-size 12px
      opacity 1
      height .03rem
      background-color: #e7e7e7


  .hot-news
    background-color $white-bg
    padding .13rem .15rem
    display flex
    align-items center
    font-size .2rem
    .new-l
      white-space nowrap
    .new-con
      width 100%
      height .25rem
      margin-right .07rem
      display block
      position relative
      overflow hidden
      ul
        position absolute
        top 0
        padding 0
        li
          width 100%
          white-space nowrap
          overflow hidden
          text-overflow ellipsis
          height .3rem
          line-height .25rem
          span
            color red
            margin 0 .1rem

    .more
      white-space nowrap
      span
        padding-left .2rem
        border-left 3px solid #999999
