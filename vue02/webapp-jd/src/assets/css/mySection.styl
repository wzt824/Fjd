@charset "utf-8"
.content
  padding .15rem

  .row
    padding 0 .1rem
    background-color #ffffff
    border-radius .05rem
    margin-bottom .18rem
    .my-nav3
      margin-bottom .2rem
    .my-nav
      display flex
      justify-content space-around
      //align-items center
      li
        display flex
        flex-direction column
        align-items center
        i
          font-size .4rem
          color #646464
        span
          display flex
          font-size .2rem
        p
          font-size .15rem
          color #cccccc
        h5
          font-size .2rem
          font-weight 900
          color #000
        img
          border-radius 50%
          width .5rem
          height .5rem


  .row3
    padding .1rem
  .service
    background-color #ffffff
    border-radius .05rem
    margin-bottom .18rem
    .jin
      padding .1rem
      display flex
      align-items center
      justify-content space-between
      font-size .2rem
      font-weight 900
      border-bottom 1px solid #eeeeee
    .serv-ul
      padding 0 .3rem
      li
        padding .2rem 0 .2rem .25rem
        display flex
        align-items center
        border-bottom 1px solid #d7d7d7
        .zuo
          display flex
          flex-direction column
          margin-right .2rem
          img
            width .43rem
            height .43rem
          span
            font-size .15rem
            color #000
        .you
          display flex
          flex-direction column
          margin-right .2rem
          p
            line-height .4rem
            width 2.4rem
            white-space nowrap
            overflow hidden
            text-overflow ellipsis
          .top
            color #000
            font-size .25rem
          .you-b
            font-size .2rem
            color #858688
        .see
          white-space nowrap
          padding .08rem .25rem
          border-radius .25rem
          font-size .2rem
          text-align center
          color #000
          border 1px solid #dadada

