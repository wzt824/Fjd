.cont
  background-color #ffffff
  height 100%

header
  position relative
  height.6rem
  padding .23rem
  display flex
  align-items center
  justify-content center
  i
    position absolute
    left .15rem
    top .15rem
  span
    text-align center
    font-size .25rem
    color #000
.sec-form
  .logo
    img
      margin 0 auto

  .form
    padding 0 .23rem
    display flex
    flex-direction column
    .user
      height .78rem
      display flex
      flex-direction column
      input
        width 100%
        height .55rem
        border 0
        border-bottom .01rem solid #cccccc
      .user-error
        height .3rem
        font-size .15rem
        color red
    .pass
      height .78rem
      position relative
      display flex
      flex-direction column
      input
        width 100%
        height .55rem
        border 0
        border-bottom .01rem solid #cccccc
      .user-error
        height .3rem
        font-size .15rem
        color red
      i
        position absolute
        right 0
        top 20%
        font-size .35rem
        color #181818
    .message
      margin-bottom .28rem
      display flex
      justify-content space-between
      align-items center
      .left
        display flex
        a
          color #000
          font-size .2rem
      .right
        color #191919
        font-size .2rem
        display flex
        align-items center
        input
          width .29rem
          height .29rem
        label
          padding-left .17rem
    .login
      display flex
      justify-content center
      input
        width 100%
        height .7rem
        border-radius .5rem
        background-color #fab3b3
        color #ffffff
        border 0
        font-size .3rem
  .reg-user
    display flex
    align-items center
    justify-content center
    margin .3rem 0
    a
      color #000
      font-size .18rem
  .forget
    margin-bottom .6rem
    display flex
    align-items center
    justify-content center
    a
      color #000
      font-size .18rem


