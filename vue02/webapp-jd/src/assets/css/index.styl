@charset "utf-8"

//search-box

$white-bg = #ffffff
$white-txt = #ffffff

$gray-tit = #737373
$right-gray-bg = #f5f5f5

  .nav-box
    background-color transparent
    position fixed
    height .75rem
    .search
      display block
      background-color #fff
    .circle
      background-color rgba(0, 0, 0, 0.3)
      color $white-txt
      display flex
      flex-direction column
      align-items center
      i
        color $white-txt
        font-weight 400
        display flex
      span
        font-size .1rem
        color $white-txt
  .scroll-header
    background-color #fff!important
    border-bottom 1px solid #eee
    .search
      background-color #eee!important
      color #333!important
    .circle
      display flex
      flex-direction column
      background-color #ffffff!important
      i
        display flex
        color #727272!important
        font-size .3rem
      span
        display flex
        color #727272!important
        font-size .05rem
        margin-top .2.2em!important


//轮播图
.head-swiper
  height 2.5rem
  .sw-box
    height 100%
    img
      width 100%
      height 100%
    .swiper-pagination-bullets
      bottom -15px
      .swiper-pagination-bullet-active
        color $white-txt
        background  $white-txt!important
        width .52rem
        margin 0!important

      .swiper-pagination-bullet
        margin 0 5px
        margin-bottom .07rem!important
        border-radius .01rem
        text-align center
        line-height .04rem
        font-size 12px
        opacity 1
        height .04rem
        background-color: $white-txt

//menu
.section
  margin 0 .15rem
  position: relative
  margin-top -.2rem
  z-index 500
  .sec-nav
    border-radius 20px
    margin-bottom .15rem
    .sw-menu
      ul
        display flex
        margin-bottom .04rem
        background-color $right-gray-bg
        li
          flex 1
          padding  .15rem 0
          margin-right .04rem
          background-color $white-bg
          a
            display flex
            flex-direction column
            align-items center
            img
              display flex
              width .55rem
              height .55rem
            span
              color $gray-tit
              font-size .17rem

        &:last-child
          margin-right 0
      .swiper-pagination-bullets
        bottom -30px
      .swiper-pagination-bullet-active
        color $white-txt
        background  #676771!important
        width .13rem
        margin 0!important
      .swiper-pagination-bullet
        margin 0 5px
        margin-bottom .07rem!important
        border-radius .01rem
        text-align center
        line-height .04rem
        font-size 12px
        opacity 1
        height .03rem
        background-color: #e7e7e7


    .hot-news
      background-color $white-bg
      padding .13rem .15rem
      display flex
      align-items center
      font-size .2rem
      .new-l
        white-space nowrap
      .new-con
        width 100%
        height .25rem
        margin-right .07rem
        display block
        position relative
        overflow hidden
        ul
          position  absolute
          top 0
          padding 0
          li
            width 100%
            white-space nowrap
            overflow hidden
            text-overflow ellipsis
            height .3rem
            line-height .25rem
            span
              color red
              margin 0 .1rem

      .more
        white-space nowrap
        span
          padding-left .2rem
          border-left 3px solid #999999





